{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "attach",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 8024,
            "host": "localhost",
            "cwd": "${workspaceFolder}",
            "remotePath": "/app"
        },
        {
          "name": "launch",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "program": "${workspaceRoot}/cmd",
          "envFile": "${workspaceRoot}/.env"
      }
    ],
}